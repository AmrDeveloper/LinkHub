<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dimen2dp"
    tools:viewBindingIgnore="true">

    <ImageView
        android:id="@+id/link_image"
        android:layout_width="@dimen/dimen35dp"
        android:layout_height="@dimen/dimen35dp"
        android:layout_centerVertical="true"
        android:contentDescription="@string/link_icon"
        android:src="@drawable/ic_link" />

    <TextView
        android:id="@+id/link_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen30dp"
        android:layout_marginStart="@dimen/dimen5dp"
        android:layout_toEndOf="@id/link_image"
        android:fontFamily="serif"
        android:gravity="center_vertical"
        android:lines="1"
        android:textStyle="bold"
        tools:text="Youtube talk" />

    <TextView
        android:id="@+id/link_subtitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen24dp"
        android:layout_below="@id/link_title"
        android:layout_marginStart="@dimen/dimen5dp"
        android:layout_toEndOf="@id/link_image"
        android:lines="1"
        android:padding="@dimen/dimen2dp"
        tools:text="Youtube talk subtitle" />
</RelativeLayout>